{
  "name": "smarthouse-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {

    "setup": "npm i -g pm2 & pm2 install pm2-logrotate & pm2 set pm2-logrotate:retain 5",
    "on": "SET NODE_ENV=production & pm2 start ./bin/www",
    "off": "pm2 stop www & pm2 delete www",


    "start": "NODE_ENV=production & node ./bin/www",
    "debug": "NODE_ENV=production & node --inspect=0.0.0.0:9229 ./bin/www",
    "dev": "SET NODE_ENV=development  & node --inspect ./bin/www",
    "test": "mocha **/**.spec.js"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "express": "~4.15.5",
    "express-jwt-2": "^1.0.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.2.0",
    "list-endpoints-express": "^1.0.1",
    "morgan": "~1.9.0",
    "node.jwt": "^0.1.5",
    "npm-platform-dependencies": "^0.1.0",
    "omit-deep": "^0.3.0",
    "serve-favicon": "~2.4.5",
    "websocket": "^1.0.25"
  },
  "linuxDependencies": {
    "i2c-bus": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.0.4"
  }
}
